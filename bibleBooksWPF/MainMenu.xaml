<Page x:Class="BibleBooksWPF.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BibleBooksWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bible Books - Main Menu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Menu Name="menTop" Grid.Column="0" Grid.Row="0" FontFamily="Tahoma" Background="#FFDFF2F7" VerticalAlignment="Top" Margin="0,0,0,10" Padding="2,5" FontSize="14">
            <MenuItem Header="Main Menu" IsEnabled="False"/>
            <MenuItem Header="Hebrew Scriptures">
                <MenuItem x:Name="imenMatchHebrew" Header="Match Chinese to English"/>
                <MenuItem x:Name="imenReorderHebrew" Header="Reorder Books"/>
            </MenuItem>
            <MenuItem Header="Greek Scriptures">
                <MenuItem x:Name="imenMatchGreek" Header="Match Chinese to English" Click="ImenMatchGreek_Click"/>
                <MenuItem x:Name="imenReorderGreek" Header="Reorder Books"/>
            </MenuItem>
            <MenuItem Header="Settings"/>
            <MenuItem Header="Exit"/>
        </Menu>
        <Image Name="imgBook" Source="Book.jpg" Grid.Column="0" Grid.Row="1" Margin="0,10"/>
        <TextBlock Name="txbDescription" Grid.Column="0" Grid.Row="2" FontFamily="Tahoma" TextAlignment="Center" VerticalAlignment="Center" FontSize="30" Padding="0,0,0,10">
            Use the menu strip at the top to begin
        </TextBlock>

    </Grid>
</Page>
