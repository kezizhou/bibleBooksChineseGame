<Page x:Class="BibleBooksWPF.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BibleBooksWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Name="menTop" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" FontFamily="Tahoma" Background="#FFDFF2F7" VerticalAlignment="Top" Margin="0,0,0,10" Padding="2,5" FontSize="14">
            <MenuItem Header="Main Menu"/>
            <MenuItem Header="Hebrew Scriptures">
                <MenuItem x:Name="imenMatchHebrew" Header="Match Chinese to English"/>
                <MenuItem x:Name="imenReorderHebrew" Header="Reorder Books"/>
            </MenuItem>
            <MenuItem Header="Greek Scriptures">
                <MenuItem x:Name="imenMatchGreek" Header="Match Chinese to English"/>
                <MenuItem x:Name="imenReorderGreek" Header="Reorder Books"/>
            </MenuItem>
            <MenuItem Header="Settings" IsEnabled="False" />
            <MenuItem Header="Exit"/>
        </Menu>

        <GroupBox Header="Audio Pronunciation" Grid.Column="0" Grid.Row="1" FontSize="14" Margin="0,0,0,5">
            <StackPanel Margin="5,5,0,0">
                <RadioButton x:Name="radAudioOn" IsChecked="True" IsEnabledChanged="RadAudio_IsEnabledChanged">On</RadioButton>
                <RadioButton x:Name="radAudioOff" IsEnabledChanged="RadAudio_IsEnabledChanged">Off</RadioButton>
            </StackPanel>
        </GroupBox>

    </Grid>
</Page>
